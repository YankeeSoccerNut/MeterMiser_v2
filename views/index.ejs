<!DOCTYPE html>
<html>
  <head>
    <title>MeterMiser</title>
    <% include head %>

  </head>
  <body>
    <div class="container sign-in-con">

      <div id="sign-in-field" class="card-box">
        <div class="header">
          <div class="text-center">
          <img src="/images/MeterMiserWTmd.png" class="text-center" alt="">
          </div>
          <h1 class="text-center logo-font" style="margin-top: 0px; margin-bottom: 0px; padding-top: 0px;"><span style="color: black;">Meter</span>Miser</h1>

        </div>

        <div class="card-box-padfont" style="overflow: hidden;">
          <form class="mm-signin-form">

          <div class="row clearfix">

            <div class="col-md-12">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="material-icons">email</i>
                </span>
                <div class="form-line">
                  <input id="email-input" type="text" class="form-control email" placeholder="Email Address">

                </div>

              </div>

            </div>

          </div>

          <div class="row clearfix">

            <div class="col-md-12">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="material-icons">lock</i>
                </span>
                <div class="form-line">
                  <input id="phone-phone-input" type="text" class="form-control mobile-phone-number" placeholder="Password">

                </div>

              </div>

            </div>

            <div class="LoginForm-rememberForgot text-center">
              <label>
                <input type="checkbox" name="remember_me" value="1" checked="checked">
                <span>Remember me</span>
              </label>
              <span class="separator">·</span>
              <a class="forgot" href="#" rel="noopener" style="color: #1c94e0;">Forgot password?</a>
            </div>

          </div>

          <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-signin-submit btn-lg" style="width: 100%;">Sign In</button>
          </div>

        </form>
        </div>
        <div class="dont-have-account text-center">
          <div class="linkpad">

          Don't have an account?
          <a class="signupLink" href="#" rel="noopener">Sign up »</a>
        </div>
        </div>

      </div>



    </div>

    <!-- custom JS -->
    <script type="text/javascript" src="scripts.js"></script>
  </body>
</html>
